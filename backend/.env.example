# Server Configuration
PORT=8000
NODE_ENV=development  # development, production, test

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Admin Initialization
ADMIN_EMAIL=admin@example.com
ADMIN_UID=firebase-user-uid-for-admin

# Hyperledger Fabric REST API Endpoints
AKADEMIK_REST_ENDPOINT=http://localhost:8801
REKTOR_REST_ENDPOINT=http://localhost:8802

# Fabric Organization Configuration
AKADEMIK_MSP_ID=AkademikMSP
REKTOR_MSP_ID=RektorMSP
FABRIC_CHANNEL=mychannel

# Fabric Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpw

# IPFS Configuration
IPFS_GATEWAY_URL=http://localhost:8080

# Security
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# Chaincode Information
CHAINCODE_NAME=ijazahcontract

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# File Upload Limits (in bytes)
MAX_FILE_SIZE=5242880  # 5MB
MAX_SIGNATURE_SIZE=2097152  # 2MB